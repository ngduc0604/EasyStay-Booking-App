<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Tiêu đề -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnConfirmBooking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@color/blue500"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/back_to_detail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="70dp"
                    android:src="@drawable/ic_back_white">
                </ImageView>
                <TextView
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điền thông tin của bạn"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
            <LinearLayout
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/header"
                        android:text="Họ Tên"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:paddingLeft="5dp"
                        android:textSize="@dimen/header"
                        android:textColor="#FF0000">
                    </TextView>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Họ Tên"
                    android:textSize="22dp"
                    android:inputType="textPersonName"
                    android:layout_marginTop="8dp"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/header"
                        android:text="Email"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:paddingLeft="5dp"
                        android:textSize="@dimen/header"
                        android:textColor="#FF0000">
                    </TextView>
                </LinearLayout>
                <!-- Email -->
                <EditText
                    android:textSize="22dp"
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Địa chỉ email"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="8dp"/>
                <!-- Điện thoại -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/header"
                        android:text="Điện Thoại"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:paddingLeft="5dp"
                        android:textSize="@dimen/header"
                        android:textColor="#FF0000">
                    </TextView>
                </LinearLayout>
                <EditText
                    android:textSize="22dp"
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Điện thoại *"
                    android:inputType="phone"
                    android:layout_marginTop="8dp"/>

                <!-- Checkbox lưu thông tin -->
                <CheckBox
                    android:id="@+id/checkboxSaveInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lưu chi tiết của bạn cho các đặt phòng tương lai"
                    android:layout_marginTop="12dp"/>

                <!-- Tổng tiền -->
                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VND 0"
                    android:textStyle="bold"
                    android:textSize="@dimen/header"
                    android:layout_marginTop="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đã bao gồm thuế và phí "
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- Button Bước tiếp theo -->
    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btnConfirmBooking"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Bước tiếp theo"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/blue500"
        android:textColor="@android:color/white"
       />
</androidx.constraintlayout.widget.ConstraintLayout>
