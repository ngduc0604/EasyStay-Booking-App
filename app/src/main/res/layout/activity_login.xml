<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo2"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Google Button Layout -->
    <LinearLayout
        android:id="@+id/llGoogle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:weightSum="5"
        android:background="@drawable/btn_border"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_gg"
            android:scaleType="centerInside"
            android:contentDescription="Google Icon" />

        <Button
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:text="Tiếp tục bằng tài khoản Google"
            android:background="@android:color/transparent"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- Facebook Button Layout -->
    <LinearLayout
        android:id="@+id/llFacebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:weightSum="5"
        android:background="@drawable/btn_border"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/llGoogle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_facebook"
            android:scaleType="centerInside"
            android:contentDescription="Facebook Icon" />

        <Button
            android:id="@+id/btnFacebookSignIn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:text="Tiếp tục bằng Facebook"
            android:background="@android:color/transparent"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- Terms and Policy -->
    <LinearLayout
        android:id="@+id/llTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="16dp"
            android:linksClickable="true"
            android:clickable="true" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
