<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
>

        <!-- Ảnh khách sạn -->
        <ImageView
            android:padding="10dp"
            android:id="@+id/imgHotel"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder" />

        <!-- Nội dung -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginStart="10dp">

            <!-- Tên khách sạn -->
            <TextView
                android:id="@+id/tvHotelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khách sạn ABC"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- Địa chỉ -->
            <TextView
                android:id="@+id/tvHotelAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 Đường ABC, Hà Nội"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp" />

            <!-- Rating và sao -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvHotelRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.5"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHotelStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="3★"
                    android:textSize="14sp"
                    android:textColor="#FFC107" />
            </LinearLayout>

            <!-- Giá -->
            <TextView
                android:id="@+id/tv_OldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D32F2F"
                android:text="2.000.000đ">
            </TextView>

            <TextView
                android:id="@+id/tvHotelPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.500.000đ / 2 đêm"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
            <TextView
                android:id="@+id/tv_numberRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D32F2F"
                android:textSize="12dp"
                android:text="Chỉ còn 1 ">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
