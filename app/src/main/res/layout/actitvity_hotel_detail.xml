<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Thanh công cụ cố định trên cùng -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/blue500"
        android:orientation="horizontal"
        android:paddingTop="40dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_white" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btnHeart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_hear_white" />

        <ImageView
            android:id="@+id/btn_Share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_share" />
    </LinearLayout>

    <!-- Nội dung cuộn được -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:paddingBottom="80dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintBottom_toTopOf="@id/btnSelectRoom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvHotelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hanoi Sisters Boutique Hotel - Spa - Travel"
                android:textStyle="bold"
                android:textSize="25sp" />
            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.7"
                    android:textColor="#007AFF"
                    android:textSize="17sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★★★"
                    android:textColor="#FFA500"
                    android:textSize="17sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <!-- Thay thế RecyclerView bằng GridView -->
            <GridView
                android:id="@+id/gridPhotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:verticalSpacing="4dp"
                android:horizontalSpacing="2dp"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:padding="4dp"/>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text"
                        android:text="Nhận phòng">
                    </TextView>
                    <TextView
                        android:id="@+id/tvCheckIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text"
                        android:textColor="@color/blue500"
                        android:textStyle="bold"
                        android:text="T6, 18 Th7">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text"
                        android:text="Trả Phòng">
                    </TextView>
                    <TextView
                        android:id="@+id/tvCheckOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text"
                        android:textColor="@color/blue500"
                        android:textStyle="bold"
                        android:text="T6, 18 Th7">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_numberNight"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá cho 2 đêm">
            </TextView>
            <TextView
                android:id="@+id/tv_price"
                android:textSize="@dimen/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="5.400.281 VND">
            </TextView>
            <TextView
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đã bao gồm thuế và phí">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Vị trí chỗ nghỉ"
                android:textSize="@dimen/header"
                android:textStyle="bold" />
            <FrameLayout
                android:id="@+id/mapContainer"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp">
                <org.osmdroid.views.MapView
                    android:id="@+id/imgMap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <!-- View trong suốt nằm trên MapView -->
                <View
                    android:id="@+id/mapOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent" />
            </FrameLayout>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 Phố Hàng Thùng, Hoàn Kiếm, Hà Nội"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/text"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#6B6B6B"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cực kì phù hợp cho kỳ lưu trú của bạn"
                android:textSize="@dimen/header"
                android:textStyle="bold" />
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Dòng 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_bathroom" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Phòng tắm riêng"
                        android:layout_marginStart="8dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_air_conditioning" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điều hòa không khí"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Dòng 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_wifi" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="WiFi miễn phí"
                        android:layout_marginStart="8dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_tv" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TV màn hình phẳng"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Dòng 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_airport_shuttle" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Xe đưa đón sân bay"
                        android:layout_marginStart="8dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_family_room" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phòng gia đình"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Dòng 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_no_smoking" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Phòng không hút thuốc"
                        android:layout_marginStart="8dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_room_service" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dịch vụ phòng"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Dòng 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_spa" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Trung tâm Spa - chăm sóc sức khoẻ"
                        android:layout_marginStart="8dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_restaurant" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 nhà hàng"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#6B6B6B"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả"
                android:textSize="@dimen/header"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescription"
                android:textSize="@dimen/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Khách sạn 3 sao trung tâm Hà Nội với phòng máy lạnh, Wi-Fi miễn phí, nhà hàng và dịch vụ phòng." />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#6B6B6B"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chính sách"
                android:textSize="@dimen/header"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/text"
                android:text="Nhận phòng: từ 14:00 đến 00:00" />

            <TextView
                android:textSize="@dimen/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trả phòng từ 00:00 đến 12:00" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_free"
                    android:padding="2dp"
                    android:text="Miễn phí"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textSize="16dp"
                    android:text="Wi-fi có ở toàn bộ khách sạn và miễn phí.">
                </TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#6B6B6B"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="@dimen/header"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Trẻ em và giường phụ">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/text"
                    android:text="Phù hợp cho tất cả trẻ em" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/text"
                    android:text="Trẻ em từ 13 tuổi trở lên sẽ được tính giá như người lớn tại chỗ nghỉ này" />
            </LinearLayout>
            <!-- ===== ĐÁNH GIÁ KHÁCH SẠN (Chỉ xem 3 cái ở màn chi tiết) ===== -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#6B6B6B"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tvReviewsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh giá của khách"
                android:textStyle="bold"
                android:textSize="@dimen/header"
                android:layout_marginTop="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:layout_marginTop="8dp"
                tools:listitem="@layout/item_review_hotel"
                tools:itemCount="3" />

            <TextView
                android:id="@+id/tvSeeMoreReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Xem thêm đánh giá"
                android:textColor="@color/blue500"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone" />
            <!-- ============================================================== -->

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSelectRoom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chọn phòng"
        android:layout_margin="16dp"
        android:backgroundTint="@color/blue500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
